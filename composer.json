{
    "name": "zapheus/slytherin-bridge",
    "description": "Slytherin Integration bridge for Zapheus framework.",
    "keywords": ["bridge", "integration", "slytherin", "zapheus"],
    "homepage": "https://zapheus.github.io/slytherin-bridge/",
    "license": "MIT",
    "authors":
    [
        {
            "email": "rougingutib@gmail.com",
            "homepage": "https://roug.in/",
            "name": "Rougin Gutib",
            "role": "Software Engineer"
        }
    ],
    "require":
    {
        "php": ">=5.3.0",
        "rougin/slytherin": "~0.9",
        "zapheus/zapheus": "~0.1"
    },
    "require-dev":
    {
        "phpunit/phpunit": "~4.2|~5.7",
        "scrutinizer/ocular": "~1.1.0"
    },
    "autoload":
    {
        "psr-4":
        {
            "Zapheus\\Bridge\\Slytherin\\": "src"
        }
    },
    "autoload-dev":
    {
        "psr-4":
        {
            "Zapheus\\Bridge\\Slytherin\\": "tests"
        }
    },
    "scripts":
    {
        "test": "phpunit"
    },
    "extra":
    {
        "branch-alias":
        {
            "dev-master": "1.0-dev"
        }
    }
}